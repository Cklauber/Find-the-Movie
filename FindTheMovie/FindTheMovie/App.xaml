<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindTheMovie.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Blue">#3490DC</Color>
            <Color x:Key="Black">#22292F</Color>
            <Color x:Key="White">#FFFFFF</Color>
        </ResourceDictionary>
        <Style x:Key="Regular" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource Blue}"/>
            <Setter Property="TextColor" Value="{StaticResource White}"/>
            <Setter Property="BorderRadius" Value="15"/>
        </Style>
        <Style x:Key="Reversed" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
            <Setter Property="TextColor" Value="{StaticResource Blue}"/>
            <Setter Property="BorderRadius" Value="15"/>
        </Style>
    </Application.Resources>
</Application>